<%- include("../partials/header") %>
<div class="container">
    <h1 class="display-5 text-center text-light">Add a new Location</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/location" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="loc[name]" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="loc[region]" placeholder="Region">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="loc[coordinate]" placeholder="Coordinate">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="loc[des]" placeholder="Description"></textarea>
            </div>            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/location">Go Back</a>
    </div>
</div>
<%- include("../partials/footer") %>